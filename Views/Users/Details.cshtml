@model Microsoft.AspNetCore.Identity.IdentityUser

@{
    ViewData["Title"] = "User Details";
    var userRoles = (IEnumerable<string>)ViewBag.UserRoles ?? new List<string>();
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <h1>User Details</h1>
            <hr />

            <div class="mb-3">
                <label class="form-label"><strong>Username:</strong></label>
                <p>@Model.UserName</p>
            </div>

            <div class="mb-3">
                <label class="form-label"><strong>Email:</strong></label>
                <p>@Model.Email</p>
            </div>

            <div class="mb-3">
                <label class="form-label"><strong>Email Confirmed:</strong></label>
                <p>
                    @if (Model.EmailConfirmed)
                    {
                        <span class="badge bg-success">Yes</span>
                    }
                    else
                    {
                        <span class="badge bg-warning">No</span>
                    }
                </p>
            </div>

            <div class="mb-3">
                <label class="form-label"><strong>Roles:</strong></label>
                <p>
                    @if (userRoles.Any())
                    {
                        @foreach (var role in userRoles)
                        {
                            <span class="badge bg-info">@role</span>
                        }
                    }
                    else
                    {
                        <span class="text-muted">No roles assigned</span>
                    }
                </p>
            </div>

            <div class="mb-3">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
                <a asp-action="AssignRoles" asp-route-id="@Model.Id" class="btn btn-secondary">Assign Roles</a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
                <a asp-action="Index" class="btn btn-secondary">Back</a>
            </div>
        </div>
    </div>
</div>
