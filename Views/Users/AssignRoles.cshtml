@model Microsoft.AspNetCore.Identity.IdentityUser

@{
    ViewData["Title"] = "Assign Roles";
    var allRoles = (IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>)ViewBag.AllRoles ?? new List<Microsoft.AspNetCore.Identity.IdentityRole>();
    var userRoles = (IEnumerable<string>)ViewBag.UserRoles ?? new List<string>();
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <h1>Assign Roles to User</h1>
            <hr />

            <div class="mb-3">
                <label class="form-label"><strong>User:</strong></label>
                <p>@Model.UserName (@Model.Email)</p>
            </div>

            <form asp-action="AssignRoles" method="post">
                <input type="hidden" name="id" value="@Model.Id" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label class="form-label"><strong>Select Roles:</strong></label>
                    <div class="row">
                        @foreach (var role in allRoles)
                        {
                            <div class="col-md-6">
                                <div class="form-check">
                                    <input class="form-check-input" 
                                           type="checkbox" 
                                           name="selectedRoles" 
                                           value="@role.Name" 
                                           id="role_@role.Id"
                                           @(userRoles.Contains(role.Name) ? "checked" : "") />
                                    <label class="form-check-label" for="role_@role.Id">
                                        @role.Name
                                    </label>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Save Roles</button>
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
