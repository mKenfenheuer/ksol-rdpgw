@model Microsoft.AspNetCore.Identity.IdentityUser

@{
    ViewData["Title"] = "Delete User";
    var userRoles = (IEnumerable<string>)ViewBag.UserRoles ?? new List<string>();
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <h1>Delete User</h1>
            <hr />

            <div class="alert alert-warning" role="alert">
                <strong>Warning!</strong> Are you sure you want to delete this user? This action cannot be undone.
            </div>

            <div class="mb-3">
                <label class="form-label"><strong>Username:</strong></label>
                <p>@Model.UserName</p>
            </div>

            <div class="mb-3">
                <label class="form-label"><strong>Email:</strong></label>
                <p>@Model.Email</p>
            </div>

            <div class="mb-3">
                <label class="form-label"><strong>Roles:</strong></label>
                <p>
                    @if (userRoles.Any())
                    {
                        @foreach (var role in userRoles)
                        {
                            <span class="badge bg-info">@role</span>
                        }
                    }
                    else
                    {
                        <span class="text-muted">No roles assigned</span>
                    }
                </p>
            </div>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Delete Permanently</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
