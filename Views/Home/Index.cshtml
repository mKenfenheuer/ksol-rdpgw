@model IEnumerable<KSol.RDPGateway.Models.RDPResource>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1>Available RDP Resources</h1>
            <p class="text-muted">Click on a resource to start a session or download the RDP file.</p>
        </div>
    </div>

    @if (User.Identity?.IsAuthenticated == false)
    {
        <div class="alert alert-info">
            <strong>Welcome!</strong> Please <a asp-area="Identity" asp-page="/Account/Login">sign in</a> to access RDP resources.
        </div>
    }
    else if (!Model.Any())
    {
        <div class="alert alert-warning">
            <strong>No Resources Available</strong> You don't have access to any RDP resources yet. Please contact an administrator.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var resource in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@resource.Name</h5>
                            @if (!string.IsNullOrEmpty(resource.Description))
                            {
                                <p class="card-text text-muted">@resource.Description</p>
                            }
                            <p class="card-text">
                                <small class="text-secondary">
                                    <strong>Resource ID:</strong> @resource.ResourceIdentifier
                                </small>
                            </p>
                        </div>
                        <div class="card-footer bg-light d-grid gap-2">
                            <a href="rdp://full%20address=s:@resource.ResourceIdentifier&gatewayhostname=s:@Context.Request.Host.Host" class="btn btn-primary btn-sm">
                                <i class="bi bi-play-circle"></i> Start Session
                            </a>
                            <a asp-action="DownloadRdpFile" asp-route-id="@resource.ResourceIdentifier" class="btn btn-secondary btn-sm">
                                <i class="bi bi-download"></i> Download .RDP File
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .card {
        transition: transform 0.2s, box-shadow 0.2s;
    }
    
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
</style>
